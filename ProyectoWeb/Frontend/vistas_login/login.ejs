<form action="/tiendavirtual/home" method="GET">

    <label for="username">Username</label>
    <input id="username" type="text" name="username">

    <label for="password">Password</label>
    <input id="password" type="password" name="password">

    <button type="submit"> LOGIN </button>
</form>

<html>
<head>
  <meta charset="utf-8">
</head>
<body>

<p *ngIf="controlUser.errors" >
  <span  *ngIf="controlUser.errors.required">User Requerido</span>
  <span  *ngIf="controlUser.errors.email"> User no es correto</span>
</p>

<p *ngIf="controlPass.errors" >
  <span *ngIf="controlPass.errors.required"> Password Requerido </span>
</p>

<div class="login-box">
<form #formLogin="ngForm"
      novalidate
(ngSubmit)="ingresar(formLogin)">
  
  <h1>Examen</h1>
  <!-- USERNAME INPUT -->
  <label for="username">User</label>
  <input type="text"
         id="username"
         name="username"
         required
         email
         placeholder="Ingrese su correo"
         #controlUser="ngModel"
         [(ngModel)]="usuarioL.correo"
  >
  <!-- PASSWORD INPUT -->
  
  
  <label for="password">Password</label>
  <input type="text"
         id="password"
         name="password"
         required
         placeholder="Ingrese su ContraseÃ±a"
         #controlPass="ngModel"
         [(ngModel)]="usuarioL.password"
  >
  
  <a>
    <input type="submit" value="Log In">
  </a>
  <a routerLink="/crear-usuario"
  > Registra un Nuevo Usuario !</a>
  <br>
</form>
</div>

</body>
</html>