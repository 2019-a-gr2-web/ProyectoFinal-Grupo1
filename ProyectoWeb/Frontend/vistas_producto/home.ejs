<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>Tienda Virtual</title>

    <!-- Bootstrap core CSS -->
    <link href="../../css/editor.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="narrow-jumbotron.css" rel="stylesheet">
    <!-- BOOTSWATCH 4 MATERIA -->
    <link rel="stylesheet" href="https://bootswatch.com/4/lumen/bootstrap.min.css">
    <!-- SWIPER CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/css/swiper.min.css">
</head>

<body>
    <%- include('../partials/header') %>
    <% const existenProductosFiltrados = productosFiltrados  %>
    <!-- MAIN CONTENT -->
    <div class="container p-4">
        <style>
            body {
                background: #fff;
                font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
                font-size: 14px;
                color: #000;
                margin: 0;
                padding: 0;
            }

            .swiper-container {
                width: 50%;
                padding-top: 10px;
                padding-bottom: 50px;
                margin: 0 auto;
            }

            .swiper-slide {
                background-position: center;
                background-size: cover;
                width: 400px;
                height: 600px;
            }
        </style>
        <div class="swiper-container">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
                <% productos.forEach((producto) => { %>
                <img src="<%=producto.imagenProducto%>" alt="" width="30px" height="30px" alt="" class="swiper-slide">
                <% })%>
            </div>

            <div class="swiper-pagination"></div>

        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/js/swiper.min.js"></script>
        <script>
            var swiper = new Swiper('.swiper-container', {
                effect: 'coverflow',
                grabCursor: true,
                centeredSlides: true,
                esPerView: 'auto',
                coverflowEffect: {
                    rotate: 50,
                    stretch: 0,
                    depth: 50,
                    modifier: 1,
                    slideShadows: true,
                },
                pagination: {
                    el: '.swiper-pagination',
                },
            });
        </script>
        <div>

            <nav class="navbar navbar-dark bg-dark mb-4">
                <%- include('../partials/search') %>
            </nav>
        </div>
        <div>
            <nav class="navbar navbar-dark bg-dark mb-4">
                <%- include('../vistas_producto/productsCards',{productos:existenProductosFiltrados}) %>
            </nav>
        </div>
        <footer class="footer">
            <p>Â© Company 2017</p>
        </footer>

</body>

</html>