                    <select name="tipoPago" id=""></select>
                  </div>
                </div>
              </div>
            </div>
            <!--Segunda Columna-->
            <div class="col-md-6">
              
              <div class="form-group row">
                <label class="col-sm-3 col-form-label ">Direccion</label>
                <div class="col-sm-6">
                  <input type="text" class="form-control" placeholder="Calle las flores">
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-3 col-form-label">Estado</label>
                <div class="col-sm-6">
                  <input type="text" class="form-control" placeholder="En Compra/Pagado">
                </div>
              </div>
              
              <br>
              <div class="form-group row">
                <label class="col-sm-3 col-form-label">Total</label>
                <div class="col-sm-6">
                  <input type="text" class="form-control">
                </div>
              </div>
              <div class="card">
                <div class="col-md-12 float-right">
                  
                  <div class="row justify-content-md-center">
                    <button type="button" class="btn btn-success ">Guardar Datos</button>
                  </div>
